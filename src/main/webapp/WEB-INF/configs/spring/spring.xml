<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
						http://www.springframework.org/schema/aop
						http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<!--初始化的Service保证事务的增强处理能力 <context:component-scan base-package="ofly.ep.**" 
		/> -->
	<context:component-scan base-package="ofly.ep.**">
		<context:include-filter type="annotation"
			expression="org.springframework.stereotype.Controller" />
	</context:component-scan>
	<!--Aop切面编程的配置-->
    <aop:aspectj-autoproxy expose-proxy="true"></aop:aspectj-autoproxy>
    <bean id="logAopAction" class="ofly.ep.test.aop.LogAopAction"></bean>
    <!--<bean id="logAopAction" class="ofly.ep.test.aop.MethodLogAspectJ"></bean>-->
    <!--<bean id="logAopAction" class="ofly.ep.test.aop.LogAopAction"></bean>-->


</beans>